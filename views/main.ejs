<!doctype html>
<html ng-app="Tee-Designer" >
  <head>
    <!-- includes for jQuery, Angular, and Bootstrap -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.7.20/fabric.min.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular-animate.js"></script>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
     <meta name="viewport" content="width=device-width, initial-scale=1.0">

     <script src="/scripts/script.js" type="text/javascript"></script>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
     <link rel="stylesheet" href="/stylesheets/style.css" >
<title>T_Designer</title>
  </head>
<body ng-controller="mainController">
  <h2>T-DESIGNER</h2>

 <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
    <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" >&times;</button>
          <h3 class="modal-title">Save Design</h3>
        </div>
        <div class="modal-body">
         <input type='text' placeholder="name"  ng-change="changedesignname(savedname)" class="form-control"  ng-model="savedname"  />
        </div>
        <div class="modal-footer">
        <span style="color: #1c7aa2;" ng-show="notext">Please enter a name</span>
          <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="submit()" ng-disabled="notext">Save</button>
        </div>
    </div>
      
    </div>
 </div>
<div class="Top-bar">
 <div class="clear-canvas"> <button ng-click="clear()" class="btn btn-md clearbtn" ><span class="glyphicon glyphicon-erase" ></span>Clear Canvas</button></div>
 <div class="image-input">
    <input type="file" id="file" name="file" ng-model="image" onchange="angular.element(this).scope().changeimage()"/>
     <button ng-click="add()" class="btn btn-primary btn-md" ><span class="glyphicon glyphicon-picture" ></span>Add Image</button>
 </div>
 <div class="text-input">
       <input type='text' placeholder="Write here......" class="form-control input-sm canvastext"  ng-model="text"  />
        <button ng-click="readText(text)" class="btn btn-danger btn-md"> <span class="glyphicon glyphicon-edit"></span> Add Text</button>
 </div>
 <div class="save-input"> <button class="btn btn-info btn-md" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-floppy-save"></span>Save</button></div>
 </div>
      
      
<div class="design-container" >
              
                 <canvas  id="canvas"></canvas>
</div>
    <div class="listheader">Saved Designs</div>
<div class="saved-designs">
       
        <% include ./partials/_designs %>
      </div>
 <div class="loader" ng-show="loader"></div>

  </body>
</html>    